{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "rootDir": "./src",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "baseUrl": "./src",
    "paths": {
      "@infra/*": ["infra/*"],
      "@presenters/*": ["presenters/*"],
      "@application/*": ["application/*"],
      "@domain/*": ["domain/*"]
    }
  }
}
